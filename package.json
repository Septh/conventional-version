{
  "name": "conventional-version",
  "version": "1.0.0",
  "description": "A replacement for `npm version` with automatic CHANGELOG generation -- forked from 'conventional-changelog/standard-version'.",
  "author": "Stephan 'Septh' Schreiber <septh@sfr.fr>",
  "homepage": "https://github.com/Septh/conventional-version#readme",
  "keywords": [
    "conventional-changelog",
    "changelog",
    "version"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Septh/conventional-version"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14.8"
  },
  "type": "module",
  "main": "./lib/index.js",
  "bin": "./bin/cli.js",
  "scripts": {
    "build": "rimraf bin lib && tsc",
    "watch": "rimraf bin lib && tsc -w",
    "pretest": "rimraf tmp",
    "test": "TS_NODE_PROJECT=./test/tsconfig.json mocha"
  },
  "mocha": {
    "loader": [ "ts-node/esm", "esmock" ],
    "extension": [ "ts" ],
    "sort": true,
    "asyncOnly": true,
    "bail": true,
    "timeout": 3000
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "conventional-changelog": "^3.1.25",
    "conventional-changelog-config-spec": "^2.1.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "conventional-recommended-bump": "^6.1.0",
    "detect-indent": "^7.0.1",
    "detect-newline": "^4.0.0",
    "dotgitignore": "^2.1.0",
    "figures": "^5.0.0",
    "find-up": "^6.3.0",
    "git-semver-tags": "^4.1.1",
    "semver": "^7.3.7",
    "stringify-package": "^1.0.1",
    "tslib": "^2.4.0",
    "yargs": "^17.6.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/json-schema": "^7.0.11",
    "@types/mocha": "^10.0.0",
    "@types/mock-fs": "^4.13.1",
    "@types/node": "^16.11.59",
    "@types/semver": "^7.3.12",
    "@types/std-mocks": "^1.0.1",
    "@types/yargs": "^17.0.13",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "esmock": "^2.0.4",
    "execa": "^6.1.0",
    "mocha": "^10.0.0",
    "mock-fs": "^5.1.4",
    "nanoid": "^4.0.0",
    "rimraf": "^3.0.2",
    "std-mocks": "^1.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
